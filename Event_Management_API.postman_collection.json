                },
                {
                  "key": "totalCapacity\",\n  \"value\": \"5000\",\n  \"type\": \"text"
                },
                {
                  "key": "ticketPrice\",\n  \"value\": \"50\",\n  \"type\": \"text"
                }
              ]
            },
            "url": {
